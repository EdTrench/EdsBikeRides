@model EdsBikeRides.ViewModels.RideViewModel

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Ride</legend>

        @Html.HiddenFor(model => model.Ride.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.Ride.RideDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Ride.RideDate)
            @Html.ValidationMessageFor(model => model.Ride.RideDate)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Ride.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Ride.Name)
            @Html.ValidationMessageFor(model => model.Ride.Name)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.Ride.Bike.Name)
        </div>        
         <div class="editor-field"> 
            @Html.DropDownListFor(model => model.Ride.Bike.Id, Model.Bikes)
            @Html.ValidationMessageFor(model => model.Ride.Bike.Name)
        </div>
        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
